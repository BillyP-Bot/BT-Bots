{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",
    "types": ["bun-types"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@commands": ["src/commands"],
      "@helpers": ["src/helpers"],
      "@reactions": ["src/reactions"],
      "@types": ["src/types"],
      "@enums": ["src/types/enums"]
    }
  }
}
